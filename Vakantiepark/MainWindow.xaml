<Window x:Class="Vakantiepark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vakantiepark"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush Opacity="0.7" ImageSource="https://www.vakantiediscounter.nl/blog/wp-content/uploads/2016/11/caribische-eilanden.jpg"/>
        </Grid.Background>

        <Button x:Name="btnKlant" Content="Klant" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Click="btnKlant_Click" Height="118" Opacity="0.725" Margin="115,140,0,0"/>
        <Button x:Name="btnHuis" Content="Huis" HorizontalAlignment="Left" Margin="345,140,0,0" VerticalAlignment="Top" Width="125" Height="118" Click="btnHuis_Click" Opacity="0.7"/>
        <Button x:Name="btnType" Content="Type Huis" HorizontalAlignment="Left" Margin="585,140,0,0" VerticalAlignment="Top" Width="125" Height="118" Click="btnType_Click" Opacity="0.7"/>
        <Label Content="Vakantiepark" HorizontalAlignment="Left" Margin="243,0,0,0" VerticalAlignment="Top" Height="80" Width="289" FontSize="48"/>

    </Grid>
</Window>
